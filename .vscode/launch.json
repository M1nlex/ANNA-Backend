{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Run AVA test",
            "program": "${workspaceFolder}/node_modules/ava/profile.js",
            "args": [
              "${file}"
            ],
            "skipFiles": [
                "<node_internals>/**/*.js"
            ],
            "console": "internalConsole", 
            "outputCapture": "std",
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Live debug",
            "program": "${workspaceFolder}/src/app.js",
            "console": "internalConsole", 
            "outputCapture": "std"
        }
    ]
}