{
  "name": "anna-backend",
  "version": "1.1.0",
  "description": "Backend for ANNA intranet",
  "main": "app.js",
  "author": "IpsaOne DevTeam",
  "private": true,
  "license": "ISC",
  "dependencies": {
    "async": "^3.0.0",
    "bcrypt": "^3.0.6",
    "body-parser": "^1.19.0",
    "connect-redis": "^3.4.2",
    "cors": "^2.8.4",
    "dotenv": "^8.1.0",
    "emailjs": "^2.1.0",
    "eslint-plugin-nodejs": "0.0.1",
    "express": "^4.17.0",
    "express-async-errors": "^3.0.0",
    "express-boom": "^3.0.0",
    "express-rate-limit": "^4.0.1",
    "express-request-id": "^1.4.0",
    "express-session": "^1.16.2",
    "find-root": "^1.1.0",
    "glob": "^7.1.4",
    "helmet": "^3.21.1",
    "joi": "^14.3.1",
    "marked": "^0.7.0",
    "mmmagic": "^0.5.3",
    "morgan": "^1.9.0",
    "multer": "^1.4.2",
    "mustache": "^3.1.0",
    "mv": "^2.1.1",
    "mysql2": "^1.5.2",
    "nodemailer": "^6.2.1",
    "sequelize": "^5.8.6",
    "smtp-server": "^3.4.1",
    "sqlite3": "^4.1.0",
    "tape": "^4.11.0",
    "uid": "0.0.2",
    "uuid": "^3.3.2",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "autocannon": "^3.2.2",
    "ava": "^1.4.1",
    "chai": "^4.1.2",
    "chai-http": "^4.3.0",
    "chance": "^1.1.0",
    "clinic": "^4.1.0",
    "eslint": "^5.16.0",
    "eslint-plugin-chai-friendly": "^0.4.1",
    "eslint-plugin-mocha": "^5.3.0",
    "eslint-plugin-promise": "^4.1.1",
    "husky": "^2.3.0",
    "jsdoc": "^3.6.2",
    "nodemon": "^1.19.0",
    "nyc": "^14.1.1",
    "sequelize-cli": "^5.5.1",
    "sequelize-mock": "^0.10.2",
    "sinon": "^7.5.0",
    "supertest": "^4.0.2",
    "umzug": "^2.1.0",
    "wrk": "^1.2.0"
  },
  "node_deb": {
    "entrypoints": {
      "daemon": "./src/app.js"
    }
  },
  "nyc": {
    "check-coverage": true,
    "cache": true,
    "lines": 80,
    "statements": 80,
    "functions": 80,
    "branches": 50,
    "reporter": [
      "html",
      "text-summary"
    ],
    "exclude": [
      "src/modules/**/test/*.js",
      "src/modules/logs"
    ]
  },
  "ava": {
    "files": [
      "src/modules/**/test/*.js",
      "test/*.js"
    ],
    "verbose": true,
    "babel": {},
    "concurrency": 4
  },
  "scripts": {
    "start": "node ./src/app.js",
    "test": "bash ./test/test.sh",
    "migrate": "sequelize db:migrate",
    "seed": "sequelize db:seed:all",
    "init-db": "npm run migrate && npm run seed",
    "clear-db": "sequelize db:migrate:undo:all && rm -r ./storage",
    "lint": "eslint --cache --fix --max-warnings 50 ./modules/",
    "lint-nofix": "eslint --cache --max-warnings 50 ./modules/",
    "doc": "jsdoc ./ -r -c node_modules/jsdoc/conf.json",
    "debug": "nodemon -L --inspect=0.0.0.0:9229 ./src/app.js",
    "coverage": "http-server ./coverage -p 8080 -c-1 -o",
    "load": "node --prof --no-logfile-per-isolate --logfile=./logs/v8_raw.log ./test/load.js && node --prof-process ./logs/v8_raw.log > ./logs/v8_proc.log",
    "deploy": "rm -rf ./node_modules/ && npm install && npm migrate"
  },
  "engines": {
    "node": ">=8.9.0"
  }
}
